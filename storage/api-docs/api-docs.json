                "responses": {
                    "200": {
                        "description": "Course affected successfully"
                    },
                    "403": {
                        "description": "You are not allowed to affect a course"
                    }
                }
            }
        },
        "/user": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Get a user",
                "operationId": "3d9589591e5a3f03e46356176b667054",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User found"
                    },
                    "404": {
                        "description": "User not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "User not found"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/admin/users": {
